{% extends 'base.html.twig' %}

{% block title %}Login | Security{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <label for="username">Username: </label>
            <input placeholder="Address username..." required type="text" name="_username" class="form-control" value="{{ username }}">
        </div>

        <div class="form-group">
            <label for="password">Password: </label>
            <input placeholder="Address password..." required type="password" name="_password" class="form-control">
        </div>

        <!--<input type="hidden" name="_target_path" value="/admin" />-->

        <div class="form-group">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </form>
{% endblock %}
