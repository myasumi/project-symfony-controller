{% extends 'base.html.twig' %}

{% block title %}Security - List - Course{% endblock %}

{% block body %}

    <!-- list course -->
    <section class="section bg-gray">
        <div class="container">
            <div>
                <a class="btn btn-success" href="#">New<i class="fa fa-plus"></i></a>
            </div>
            <br>
            <table class="table table-hover">
                <thead class="thead-light">
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Credits</th>
                    <th>School</th>
                    <th colspan="2">Actions</th>
                </tr>
                </thead>

                <thead>
                {% for course in courses %}
                <tbody>
                <tr>
                    <td>{{ course.codigo }}</td>
                    <td>{{ course.name }}</td>
                    <td>{{ course.credits }}</td>
                    <td>{{ course.school }}</td>
                    <td>
                        <a class="btn btn-warning" href="#">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="#">Delete</a>
                    </td>
                </tr>
                </tbody>
                {% endfor %}
                </thead>
            </table>
        </div>
    </section>
    <!-- /list course -->
{% endblock %}